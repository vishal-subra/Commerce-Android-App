<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/health_info_item_viewPager"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_height="250dp"
            />
        <TextView
            android:id="@+id/health_info_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginHorizontal="10dp"
            />
        <TextView
            android:id="@+id/health_info_item_desc"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/health_info_item_youtube_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#E53935"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/health_info_item_youtube_link_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:text="Play on YouTube"
                android:textColor="@color/colorWhite"
                android:background="#D32F2F"/>
        </LinearLayout>
        <Button
            android:id="@+id/health_info_item_editInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Info"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp"
            android:background="@color/colorButtonNormal"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>