<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper_pink"
    tools:context=".ui.universalActivities.OrderView">

    <ImageView
        android:id="@+id/imageView_orderView_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/textView_orderView_titleQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anaheim"
        android:text="Hello world"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/bt_black"
        android:textSize="25sp"
        android:layout_marginHorizontal="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Deliver to."
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/textView_orderView_customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Abdullah khan"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Order Date:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/textView_orderView_orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="13-Apr-2021"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Order Status:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/textView_orderView_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Self-Pickup"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Price:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:id="@+id/textView_orderView_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="RM 200.0"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="Total Price:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="RM "
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"
            android:layout_marginStart="5dp" />
        <TextView
            android:id="@+id/textView_orderView_orderTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anaheim"
            android:text="200.0"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bt_black"
            android:textSize="16sp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_orderView_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/baseline_arrow_back_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:tint = "@color/bt_white"/>
</LinearLayout>