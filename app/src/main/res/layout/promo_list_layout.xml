<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/promo_list_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/promo_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/promo_list_photo"
        app:layout_constraintTop_toTopOf="@id/promo_list_photo" />
    <TextView
        android:id="@+id/promo_list_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/promo_list_title"
        app:layout_constraintStart_toEndOf="@id/promo_list_photo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/lorem_ipsum"/>
    <TextView
        android:id="@+id/promo_list_datePosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/promo_list_description"
        app:layout_constraintStart_toEndOf="@id/promo_list_photo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:text="@string/date"/>
    <TextView
        android:id="@+id/promo_list_readMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/promo_list_description"
        app:layout_constraintStart_toEndOf="@id/promo_list_datePosted"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintHorizontal_bias="0.8"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/read_more"/>

    <View
        android:id="@+id/promo_list_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/promo_list_readMore"
        app:layout_constraintStart_toEndOf="@id/promo_list_photo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#333333"/>
</androidx.constraintlayout.widget.ConstraintLayout>